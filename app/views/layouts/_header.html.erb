<header>
  <nav>
    <%= link_to image_tag("logo.png"), filtered_events_path(:all)  %>
    <ul class="left">
			<li>
			  <%= link_to "Upcomming", filtered_events_path(:upcoming)%>
			</li>
			<li>
			  <%= link_to "Past", filtered_events_path(:past)%>
			</li>
			<li>
			  <%= link_to "Free", filtered_events_path(:free)%>
			</li>
			<li>
			  <%= link_to "Recent", filtered_events_path(:recent)%>
			</li>
    </ul>

    <ul class="right">
    <% if current_user %>
      <li>
        <%= link_to current_user.name, current_user%>
      </li>
      <li>
        <%= link_to "Sign Out", session_path, data: { turbo_method: :delete }, class: "button" %>
      </li>
    <% else %>
      <li>
        <%= link_to "Sign In", new_session_path, class: "button" %>
      </li>
      <li>
        <%= link_to "Sign Up", signup_path, class: "button" %>
      </li>
    <% end %>
    </ul>
  </nav>
</header>